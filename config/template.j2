/**
 * @file
 * Defines default strategy parameter values for the given timeframe.
 */

// Defines indicator's parameter values for the given pair symbol and timeframe.
struct Indi_TMA_True_Params_{{ Timeframe }} : Indi_TMA_True_Params {
  Indi_TMA_True_Params_{{ Timeframe }}() : Indi_TMA_True_Params(indi_tmat_defaults, PERIOD_{{ Timeframe }}) {
    applied_price = (ENUM_APPLIED_PRICE){{ TMA_True_Indi_TMA_True_Applied_Price | default(0) }};
    ma_method = {{ TMA_True_Indi_TMA_True_MA_Method | default(0) }};
    period = {{ TMA_True_Indi_TMA_True_Period | default(0) }};
    shift = {{ TMA_True_Shift | default(0) }};
  }
} indi_tmat_{{ Timeframe | lower }};

// Defines strategy's parameter values for the given pair symbol and timeframe.
struct Stg_TMA_True_Params_{{ Timeframe }} : StgParams {
  // Struct constructor.
  Stg_TMA_True_Params_{{ Timeframe }}() : StgParams(stg_tmat_defaults) {
    lot_size = {{ TMA_True_LotSize | default(0) }};
    signal_open_method = {{ TMA_True_SignalOpenMethod | default(0) }};
    signal_open_filter = {{ TMA_True_SignalOpenFilterMethod | default(1) }};
    signal_open_level = (float){{ TMA_True_SignalOpenLevel | default(0) }};
    signal_open_boost = {{ TMA_True_SignalOpenBoostMethod | default(0) }};
    signal_close_method = {{ TMA_True_SignalCloseMethod | default(0) }};
    signal_close_level = (float){{ TMA_True_SignalCloseLevel | default(0) }};
    price_stop_method = {{ TMA_True_PriceStopMethod | default(0) }};
    price_stop_level = (float){{ TMA_True_SignalCloseLevel | default(1) }};
    tick_filter_method = {{ TMA_True_TickFilterMethod  | default(1) }};
    max_spread = {{ TMA_True_MaxSpread | default(0) }};
  }
} stg_tmat_{{ Timeframe | lower }};
